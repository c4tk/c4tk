    <style>

      /* Inspired by kickstarter's theming */
      .project-card-wrapper {

      }

      .project-card {
        background-color: #fff;
        border: solid 1px #d9d9de;
        border-radius: 6px;
        line-height: 1.5;
        margin-bottom: 10px;
        position: relative;
        font-size: 12px;
        color: #828587;
      }

      .project-thumbnail {
        border-radius: 6px 6px 0 0;
        overflow: hidden;
        position: relative;
      }

      .project-thumbnail img {
        width:100%;
      }

      .project-card-content {
        padding: 10px;
      }

      .project-title {
        font-size: 12px;
        font-weight: bold;
        line-height: 1.25em;
        margin-bottom: 0.25em;
      }

      .project-tagline {
        margin-bottom: 10px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
      }

      .project-blurb {
        margin-bottom: 0;
        font-size:12px;
      }

      .project-card-footer {
        background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, #fff 26%);
        border-radius: 0 0 6px 6px;
        bottom: 0;
        width: 100%;
        position: absolute;
        padding: 45px 10px 10px 10px;
      }

      .project-location {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
      }
    </style>

